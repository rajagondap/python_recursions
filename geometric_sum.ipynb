   "source": [
    "# find the geometric sum if given n value\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [],
   "source": [
    "def sum(n):\n",
    "     \n",
    "    # base case\n",
    "    if n == 0:\n",
    "        return 1\n",
    "     \n",
    "    # calculate the sum each time\n",
    "    # and return final answer\n",
    "    return 1 / pow(2, n) + sum(n-1)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "6\n",
      "1.98438\n"
     ]
    }
   ],
   "source": [
    "n=int(input())\n",
    "print(\"{0:.5f}\".format(sum(n)));"
   ]
  }
